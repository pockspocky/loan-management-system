# =================================
# Docker 环境配置文件
# 复制此文件为 .env 并修改相应值
# =================================

# =====================================
# MongoDB 配置
# =====================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123456
MONGO_DATABASE=loan_management
MONGO_USERNAME=loan_user
MONGO_PASSWORD=loan123456

# =====================================
# 应用程序配置
# =====================================
NODE_ENV=production

# JWT 配置 (生产环境请更改为强密码)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-environment
JWT_EXPIRES_IN=7d

# CORS 配置
CORS_ORIGIN=http://localhost

# 日志配置
LOG_LEVEL=info

# 文件上传配置 (字节)
MAX_FILE_SIZE=10485760

# =====================================
# 端口配置
# =====================================
# 前端端口
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# 后端端口
BACKEND_PORT=8080

# 数据库端口
MONGODB_PORT=27017

# =====================================
# 域名配置 (生产环境使用)
# =====================================
# DOMAIN=yourdomain.com
# SSL_EMAIL=admin@yourdomain.com

# =====================================
# 数据库备份配置
# =====================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# =====================================
# 监控配置
# =====================================
ENABLE_MONITORING=false
MONITORING_PORT=9090

# =====================================
# 安全配置
# =====================================
# 是否启用HTTPS
ENABLE_SSL=false

# API限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 